# DHCP2P Production Environment Configuration
# Copy this file to .env.prod and update the values for production

# Build Configuration
BUILD_VERSION=1.0.0

# Database Configuration (use strong passwords in production)
POSTGRES_DB=dhcp2p_prod
POSTGRES_USER=dhcp2p_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DATABASE_URL=postgres://dhcp2p_user:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/dhcp2p_prod?sslmode=require

# Redis Configuration (use strong passwords in production)
REDIS_URL=redis:6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Application Configuration
PORT=8088
LOG_LEVEL=info

# Production Configuration (optimized values)
NONCE_TTL=5
NONCE_CLEANER_INTERVAL=5
LEASE_TTL=120
MAX_LEASE_RETRIES=3
LEASE_RETRY_DELAY=500

# Migration Control
RUN_MIGRATIONS=true