# DHCP2P Development Environment Configuration
# Copy this file to .env and update the values as needed

# Build Configuration
BUILD_VERSION=dev

# Database Configuration
POSTGRES_DB=dhcp2p
POSTGRES_USER=dhcp2p
POSTGRES_PASSWORD=dhcp2p123
DATABASE_URL=postgres://dhcp2p:dhcp2p123@postgres:5432/dhcp2p?sslmode=disable

# Redis Configuration
REDIS_URL=redis:6379
REDIS_PASSWORD=

# Application Configuration
PORT=8088
LOG_LEVEL=debug

# Required Configuration (must be set)
# These are no longer required since Ethereum/keystore functionality was removed
# PASSWORD=
# ACCOUNT=

# Optional Configuration
NONCE_TTL=5
NONCE_CLEANER_INTERVAL=5
LEASE_TTL=120
MAX_LEASE_RETRIES=3
LEASE_RETRY_DELAY=500

# Migration Control
RUN_MIGRATIONS=true

# External Database URLs (for production)
# DATABASE_URL=postgres://user:password@external-db:5432/dhcp2p?sslmode=require
# REDIS_URL=redis://user:password@external-redis:6379