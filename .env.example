# DHCP2P Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_DB=dhcp2p
POSTGRES_USER=dhcp2p
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgres://dhcp2p:your_secure_password_here@postgres:5432/dhcp2p?sslmode=disable

# Redis Configuration
REDIS_URL=redis:6379
REDIS_PASSWORD=your_redis_password_here

# Application Configuration
PORT=8088
LOG_LEVEL=debug

# Security Configuration
NONCE_TTL=5
NONCE_CLEANER_INTERVAL=5
LEASE_TTL=120
MAX_LEASE_RETRIES=3
LEASE_RETRY_DELAY=500

# Build Configuration
BUILD_VERSION=dev

# Migration Control
RUN_MIGRATIONS=false