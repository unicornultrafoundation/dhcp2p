apiVersion: v1
kind: Secret
metadata:
  name: dhcp2p-secrets
  namespace: dhcp2p
  labels:
    app: dhcp2p
type: Opaque
stringData:
  # Database Connection String
  # For in-cluster PostgreSQL without SSL use sslmode=disable
  # Format: postgres://user:password@host:port/database?sslmode=disable
  # For managed DBs requiring SSL, change to sslmode=require
  DATABASE_URL: "postgres://dhcp2p:CHANGE_ME@postgres-service:5432/dhcp2p?sslmode=disable"
  
  # Redis Connection
  # Format: host:port (without scheme)
  REDIS_URL: "redis-service:6379"
  
  # Redis Password (if required)
  REDIS_PASSWORD: "CHANGE_ME"

